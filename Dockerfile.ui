# Frontend: KinFin UI
FROM node:20-alpine

WORKDIR /app

# Install deps
COPY src/ui/package*.json ./
RUN npm install --legacy-peer-deps

# Copy frontend code
COPY src/ui/ ./

# Build static files
RUN npm run build

# Serve using vite preview
EXPOSE 5173
CMD ["npm", "run", "preview", "--", "--host", "0.0.0.0", "--port", "5173"]
